<main class="main-content">
  <h2>Books in category <%= @category.name %></h2>
<h2>Books from category</h2>
 <table>
    <thead>
      <tr>
        <th>title</th>
        <th>ISBN</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      <% @category.books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.isbn %></td>
          <td><%= link_to('show', book_path(book.id)) %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Similar books</h2>
  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>ISBN</th>
        <th>Category</th>
        <th>action</th>
      </tr>
    </thead>
    <tbody>
      <% @category.similar_books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.isbn %></td>
          <td><%= book.category.name %></td>
          <td><%= link_to('show', book_path(book.id)) %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to new_book_path, class: 'btn' do %>
    <i class="fa fa-plus-circle"></i>
    add book
  <% end %>

</main>

